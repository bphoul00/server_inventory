{% extends 'base.html.twig' %}

{% block title %}Create Server{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <form   method="post">
            <div class="form-group">
                <label for="inputId">Server ID</label>
                <input class="form-control" id="inputId" placeholder="Automatically generated" disabled>
            </div>
            <div class="form-group">
                <label for="inputStatus">Status</label>
                <input class="form-control" id="inputStatus" placeholder="Active" disabled>
            </div>
            <div class="form-group">
                <label for="inputAddress">Address IP</label>
                <input type="text" minlength="7" maxlength="15" size="15" name="address" class="form-control" id="inputAddress" required pattern="^([0-9]{1,3}\.){3}[0-9]{1,3}$" placeholder="0.0.0.0">
                <small id="emailHelp" class="form-text text-muted">Enter Address IP</small>
            </div>
            <div class="form-group">
                <label for="inputCreationDate">Creation Date</label>
                <input class="form-control" id="inputCreationDate" placeholder="Automatically generated" disabled>
            </div>
            <div class="form-group">
                <label for="inputModificationDate">Modification Date</label>
                <input class="form-control" id="inputModificationDate" placeholder="Automatically generated" disabled>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{% endblock %}
